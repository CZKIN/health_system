/* pages/result/result.wxss */
.result_container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.result_title{
    margin-bottom: 20rpx;
    color: red;
}
.result_content{
    margin-top: 10rpx;
    padding: 10rpx;
    border: 1px;
    color: red;
}

.tip_content{
    margin-top: 20rpx;
    padding: 10rpx;
    border: 1px;
    color:black;
}

.imagesize{
  display: flex;
  justify-content: center;
}

.imagesize image { 
  width:60rpx;
  height:60rpx;
}

.button-contain {
    margin-top: 50px;
    width: 200px;
    border-radius: 30px;
    background: #d13f49;
    color: white;
    padding: 0rpx 100rpx;
}

.button-contain::after{ 
    border: none; 
}